<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="10dp"
        android:id="@+id/cancel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="100dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:background="@drawable/icon_cancel" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_water"
        android:background="@drawable/icon_water"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/now_tv"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="마신 물 : "
        app:layout_constraintBottom_toBottomOf="@+id/now_cv"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/now_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/now_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/now_cv"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#8BC34A"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/now_tv"
        app:layout_constraintTop_toBottomOf="@+id/icon_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/now_et"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="10"
            android:background="@null"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/goal_tv"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="물 목표 : "
        app:layout_constraintBottom_toBottomOf="@+id/goal_cv"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/goal_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/goal_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/goal_cv"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#8BC34A"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/goal_tv"
        app:layout_constraintTop_toBottomOf="@+id/now_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/goal_et"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="10"
            android:background="@null"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/goal_cv"
        app:layout_constraintStart_toEndOf="@+id/goal_cv"
        android:text="ml"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/now_cv"
        app:layout_constraintStart_toEndOf="@+id/now_cv"
        android:text="ml"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/apply_cv"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apply_btn"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="적용하기"
            android:background="#8BC34A"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>