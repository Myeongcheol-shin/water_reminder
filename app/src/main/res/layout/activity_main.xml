<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/change_plant_cv"
        app:cardElevation="10dp"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp">
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/change_plant_name_cv"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/change_plant_cv"
        app:layout_constraintStart_toStartOf="@id/change_plant_cv"
        app:layout_constraintTop_toBottomOf="@+id/change_plant_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="식물 변경"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/log_cv"
        app:cardElevation="10dp"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@id/change_plant_cv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp">
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/log_name_cv"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/log_cv"
        app:layout_constraintStart_toStartOf="@id/log_cv"
        app:layout_constraintTop_toBottomOf="@+id/log_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="기록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="50dp"
        app:layout_constraintDimensionRatio="H,3:1"
        android:id="@+id/plant_image_cv"
        app:cardElevation="20dp"
        app:cardCornerRadius="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/plant_name_cv"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_image_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="식물 이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginEnd="10dp"
        android:id="@+id/now_water_cv"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/slash_cv"
        app:layout_constraintTop_toBottomOf="@+id/plant_name_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/slash_cv"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_name_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginStart="10dp"
        android:id="@+id/target_water_cv"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/slash_cv"
        app:layout_constraintTop_toBottomOf="@+id/plant_name_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView

        android:id="@+id/ml_tv"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/target_water_cv"
        app:layout_constraintStart_toEndOf="@id/target_water_cv"
        android:textColor="@color/black"
        android:text="ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>